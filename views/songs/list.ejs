<%- include('../layout/head') %>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Songs</h1>
    </div>

    <% if (songs.length === 0) { %>
        <div class="alert alert-warning">No songs available.</div>
    <% } else { %>
        <div class="row row-cols-2 g-3">
            <% songs.forEach(song => { %>
                <div class="col">
                    <div class="card shadow-sm border-0">
                        <div class="card-body">
                            <h5 class="card-title mb-1"><%= song.title %></h5>
                            <p class="mb-1 text-muted">Duration: <%= song.duration %> mins</p>
                            <p class="mb-2 text-muted">Album: <%= song.album_title %></p>
                            <div class="d-flex gap-2">
                                <a href="/songs/<%= song.id %>/edit" class="btn btn-outline-primary btn-sm">Edit</a>
                                <form action="/songs/<%= song.id %>?_method=DELETE" method="POST" class="d-inline">
                                    <button class="btn btn-outline-danger btn-sm">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } %>
</div>