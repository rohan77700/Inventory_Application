<%- include('../layout/head') %>

<div class="container">
    <h1 class="mb-4"><%= action %> Song</h1>

    <form method="POST">
        <div class="mb-3">
            <label class="form-label">Title</label>
            <input class="form-control" type="text" name="title" value="<%= song.title || '' %>" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Duration (minutes)</label>
            <input class="form-control" type="number" step="0.01" name="duration" value="<%= song.duration || '' %>" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Album</label>
            <select class="form-select" name="album_id" required>
                <% albums.forEach(album => { %>
                    <option value="<%= album.id %>" <%= album.id === song.album_id ? 'selected' : '' %>>
                        <%= album.title %>
                    </option>
                <% }) %>
            </select>
        </div>
        <button class="btn btn-primary" type="submit"><%= action %></button>
        <a href="/songs" class="btn btn-secondary">Cancel</a>
    </form>
</div>