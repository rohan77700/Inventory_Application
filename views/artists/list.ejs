<%- include('../layout/head') %>

<div class="container">
    <h1 class="mb-4">Artists</h1>
    <a href="/artists/create" class="btn btn-success mb-3">+ New Artist</a>

    <% if (artists.length === 0) { %>
        <p class="text-muted">No artists found.</p>
    <% } else { %>
        <% artists.forEach(artist => { %>
            <div class="card mb-3 shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1"><%= artist.name %></h5>
                        <p class="mb-0 text-muted">Genre: <%= artist.genre %></p>
                    </div>
                    <div>
                        <a href="/artists/<%= artist.id %>" class="btn btn-outline-secondary btn-sm">View</a>
                        <a href="/artists/<%= artist.id %>/edit" class="btn btn-outline-primary btn-sm">Edit</a>
                        <form action="/artists/<%= artist.id %>/delete" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        <% }) %>
    <% } %>
</div>