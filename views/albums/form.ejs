<%- include('../layout/head') %>

<div class="container">
    <h1 class="mb-4"><%= action %> Album</h1>

    <form method="POST">
        <div class="mb-3">
            <label class="form-label">Title</label>
            <input class="form-control" type="text" name="title" value="<%= album.title || '' %>" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Release Year</label>
            <input class="form-control" type="number" name="release_year" value="<%= album.release_year || '' %>" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Artist</label>
            <select class="form-select" name="artist_id" required>
                <% artists.forEach(artist => { %>
                    <option value="<%= artist.id %>" <%= artist.id === album.artist_id ? 'selected' : '' %>>
                        <%= artist.name %>
                    </option>
                <% }) %>
            </select>
        </div>
        <button class="btn btn-primary" type="submit"><%= action %></button>
        <a href="/albums" class="btn btn-secondary">Cancel</a>
    </form>
</div>