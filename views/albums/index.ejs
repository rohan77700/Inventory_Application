<%- include('../layout/head') %>

<div class="container">
    <h1 class="mb-4">Albums</h1>
    <a href="/albums/create" class="btn btn-success mb-3">+ New Album</a>

    <% if (albums.length === 0) { %>
        <p>No albums available.</p>
    <% } else { %>
        <% albums.forEach(album => { %>
            <div class="card mb-3 shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title mb-1"><%= album.title %></h5>
                        <p class="mb-0 text-muted">Artist: <%= album.artist_name %> â€¢ Year: <%= album.release_year %></p>
                    </div>
                    <div>
                        <a href="/albums/<%= album.id %>" class="btn btn-outline-secondary btn-sm">View</a>
                        <a href="/albums/<%= album.id %>/edit" class="btn btn-outline-primary btn-sm">Edit</a>
                        <form action="/albums/<%= album.id %>/delete" method="POST" class="d-inline">
                            <button class="btn btn-outline-danger btn-sm">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        <% }) %>
    <% } %>
</div>